<div class='row'>
  <div class='col-md-6'>
    <h2>Login</h2>

    <form class='form login-form' id='login-form' action="javascript:void(0)">
      <div class='form-group'>
        <label for='email-login'>email:</label>
        <input class='form-input' type='text' id='email-login' />
      </div>
      <div class='form-group'>
        <label for='password-login'>password:</label>
        <input class='form-input' type='password' id='password-login' />
      </div>
      <div class='form-group'>
        <button class='btn btn-primary' id="login-btn" type='text'>login</button>
      </div>
    </form>
  </div>
  <div class='col-md-6'>
    <h2>Signup</h2>

    <form class='form signup-form' id="signup-form" action="javascript:void(0)">
      <div class='form-group'>
        <label for='username-signup'>username:</label>
        <input class='form-input' type='text' id='username-signup' />
      </div>
      <div class='form-group'>
        <label for='password-signup'>password:</label>
        <input class='form-input' type='password' id='password-signup' />
      </div>
      <div class='form-group'>
        <button class='btn btn-primary' type='button' id="submit-btn">signup</button>
      </div>
    </form>
  </div>
</div>

<script src='./js/login.js'></script>
<script src='./js/signup.js'></script>